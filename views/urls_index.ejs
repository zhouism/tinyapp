<%- include partials/_headers.ejs %>

<!DOCTYPE html>

<html lang="en">
<head>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <title>TinyApp</title>
</head>
<body>
    <a href= "/urls/new" class="btn btn-secondary">Add another URL</a>
    <ul>
        <% for(let match of urlMatches) { %>
            <li><%= match['shortURL'] %> - <%= match['longURL'] %> 
           
            <form action='/urls/<%= match['shortURL'] %>' method='GET'>
                <button type='submit' name= 'edit' class='btn btn-success'>Edit</button>
            </form>
            <form action='/urls/<%= match['shortURL'] %>/delete' method='POST'>
                <button type='submit' name= 'delete' class='btn btn-success'>Delete</button>
            </form>
            <% } %>

    </ul>
    <a href='#'></a>
</body>
</html>